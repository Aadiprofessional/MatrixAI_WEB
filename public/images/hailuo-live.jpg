    <circle cx="680" cy="280" r="20" />
    <path d="M 680,280 L 680,260 M 680,280 L 700,280 M 680,280 L 680,300 M 680,280 L 660,280" />
    <!-- Smoke stack -->
    <rect x="670" y="120" width="10" height="30" />
    <!-- Animated smoke -->
    <path d="M 675,120 Q 690,100 675,80 Q 660,60 675,40" />
    <path d="M 675,120 Q 700,110 695,90 Q 690,70 705,50" />
